[mysqld]
#
# * Fine Tuning
#
max_connections         = 512
max_allowed_packet      = 2G
port			= 44026
bind-address		= 0.0.0.0
#wait_timeout		= 28800
#interactive_timeout	= 10000
net_read_timeout	= 28800
net_write_timeout	= 28800

# Logging level
log_warnings            = 2

#
# * MyISAM
#
key_buffer_size         = 2G


[mysqldump]
max_allowed_packet      = 2G


[isamchk]
key_buffer              = 2G


